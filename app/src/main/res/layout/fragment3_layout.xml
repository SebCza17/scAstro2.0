<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="sun"
            type="com.example.sebastian.scastro.Sun"/>
    </data>

<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/layout3" />

    <TextView
        android:id="@+id/textViewTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTest"
        android:layout_centerHorizontal="true"
        android:text="Temp" />

    <TextView
        android:id="@+id/textViewPreasuer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTemp"
        android:layout_centerHorizontal="true"
        android:text="Preasure" />

    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPreasuer"
        android:layout_centerHorizontal="true"
        android:text="Wind" />

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewWind"
        android:layout_centerHorizontal="true"
        android:text="Location" />

    <TextView
        android:id="@+id/textViewGeoLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLocation"
        android:layout_centerHorizontal="true"
        android:text="GeoLocation" />

    <TextView
        android:id="@+id/textViewWindDir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPreasuer"
        android:layout_toEndOf="@+id/textViewGeoLoc"
        android:text="Wind Direction" />

    <TextView
        android:id="@+id/textViewHumi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGeoLoc"
        android:layout_centerHorizontal="true"
        android:text="Humidity" />

    <TextView
        android:id="@+id/textViewVisibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewHumi"
        android:layout_centerHorizontal="true"
        android:text="Visibility" />

    <TextView
        android:id="@+id/textViewTempNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewVisibility"
        android:layout_centerHorizontal="true"
        android:text="NextTemp" />


</RelativeLayout>

</layout>
